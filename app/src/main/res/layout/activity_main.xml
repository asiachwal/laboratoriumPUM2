<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@android:color/holo_blue_bright"
    tools:context="com.example.student.aplikacjapogodowa.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/Polecenie"
        android:id="@+id/Tekst"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_wb_sunny_black_24dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="30 stopni celsjusza"
        android:textSize="17dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Pamiętaj o filtrze"
        android:textSize="17dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Podaj miejsce:"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Edit"
        android:backgroundTint="@android:color/black"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:ellipsize="start"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/Pobierz"
        android:text="@string/Pobierz"
        android:textColor="@android:color/holo_blue_bright"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:backgroundTint="#FFFFFF"
        android:text="POKAŻ LISTĘ DOSTĘPNYCH MIEJSC"
        android:textColor="@android:color/holo_blue_bright"/>

</LinearLayout>
